<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context=".Character">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="265dp"
        android:layout_height="62dp"
        android:gravity="left"
        android:text="Персонажи"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="419dp"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:background="#0E0E0E"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/h1"
            android:layout_width="141dp"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/sai" />

        <ImageView
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:onClick="getHome2"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/item2"
            android:layout_width="143dp"
            android:layout_height="match_parent"
            android:onClick="getItem2"
            app:srcCompat="@drawable/item" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="Сила"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Ловкость"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="258dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="111dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="Интеллект"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="Универсалы"
        android:textColor="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        tools:layout_editor_absoluteY="364dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="148dp"
        android:layout_height="135dp"
        android:layout_marginStart="16dp"
        android:onClick="getPower"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/power"
        tools:layout_editor_absoluteY="140dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="119dp"
        android:layout_height="112dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:onClick="getIQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/brain" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="111dp"
        android:layout_height="114dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="121dp"
        android:onClick="getMobile"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/raduga" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="103dp"
        android:layout_height="125dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="35dp"
        android:onClick="getSpeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/run" />

</androidx.constraintlayout.widget.ConstraintLayout>