<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context=".Character">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="265dp"
        android:layout_height="62dp"
        android:gravity="left"
        android:text="Персонажи"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="419dp"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:background="#0E0E0E"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/h1"
            android:layout_width="141dp"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/sai" />

        <ImageView
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:onClick="getHome2"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/item2"
            android:layout_width="143dp"
            android:layout_height="match_parent"
            android:onClick="getItem2"
            app:srcCompat="@drawable/item" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="157dp"
        android:gravity="center"
        android:text="Сила"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="23dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Ловкость"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="111dp"
        android:layout_height="25dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="263dp"
        android:gravity="center"
        android:text="Интеллект"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="262dp"
        android:gravity="center"
        android:text="Универсалы"
        android:textColor="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="304dp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/brain" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/power" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/raduga" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="22dp"
        android:layout_height="21dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/run" />

</androidx.constraintlayout.widget.ConstraintLayout>