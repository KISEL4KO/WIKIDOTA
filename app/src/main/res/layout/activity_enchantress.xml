<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context=".character.EnchantressActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text=" Enchantress"
        android:textColor="#FBFAFA"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="159dp"
        android:layout_height="275dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/screen" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="239dp"
        android:layout_height="214dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:text=" Переманивает нейтральных крипов на свою сторону «Спройнк!» Беспечная и чистая душой, Аюшта странствует по лесам, слушая истории их обитателей. Nature's Attendants — живые духи, исцеляющие как малых, так и больших существ — порхают вокруг неё. При необходимости она очаровывает лесных созданий Enchants для выполнения поручений. Untouchable — прекрасный образ неприкасаемой невинности, увидев который охотники не решаются хоть немного шевельнутся в сторону Аюшты. Это нежелание редко встречается. Угрозы, нависшие над её друзьям, наполняют Enchantress решимостью пойти против своего мягкого характера и взять как оружие Impetus, чтобы привести тех, кто нарушает мирное существование, к скорому и окончательному правосудию."
        android:textColor="#F4F3F3"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="136dp"
        android:layout_height="112dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/skil5" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="133dp"
        android:layout_height="115dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/skil2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="148dp"
        android:layout_height="131dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:srcCompat="@drawable/skil1" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="133dp"
        android:layout_height="122dp"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:srcCompat="@drawable/skil4" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="113dp"
        android:layout_height="123dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:srcCompat="@drawable/skill3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="215dp"
        android:layout_height="34dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Способности"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="243dp"
        android:layout_height="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:text="Роли:  Поддержка , Лес, Осада, Стойкость, Контроль"
        android:textColor="#EDE8E8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="114dp"
        android:layout_height="129dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enchantress" />
</androidx.constraintlayout.widget.ConstraintLayout>